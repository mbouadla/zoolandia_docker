{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4 text-center">Liste des Avis</h1>

    {% if avis is empty %}
        <div class="alert alert-info text-center" role="alert">
            Aucun avis disponible pour le moment.
        </div>
    {% else %}
        <div class="row">
            {% for avis in avis %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="card-title">{{ avis.nom }}</h2>
                            <h3 class="card-subtitle text-muted">{{ avis.email }}</h3>
                            <p class="card-text mt-2">{{ avis.message }}</p>
                            <small class="text-muted">Post√© le {{ avis.createdAt|date('d/m/Y H:i') }}</small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="text-center mt-4">
        <a href="{{ path('app_add_avis') }}" class="btn btn-success">
            <i class="bi bi-pencil-square"></i> Ajouter un Avis
        </a>
    </div>
</div>
{% endblock %}
